@model FastFood.Core.ViewModels.Orders.CreateOrderViewModel

@{
    ViewData["Title"] = "Create Order";
}
<h1 class="text-center">@ViewData["Title"]</h1>
<hr class="bg-secondary half-width" />
<form class="mx-auto half-width" asp-controller="Orders" asp-action="Create" method="post">
    <div class="form-group">
        <label for="name">Customer</label>
        <input type="text" class="form-control" id="customer" placeholder="Customer..." name="customer">
    </div>
    <div class="form-group">
        <label for="employee">Employee</label>
        <select id="employee" class="form-control" name="EmployeeId">
            @for (var i = 0; i < Model.EmployeesIds.Count(); i++)
            {
                <option value="@Model.EmployeesIds[i]">@Model.EmployeesNames[i]</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="item">Item</label>
        <select id="item" class="form-control" name="ItemId">
            @for (var i = 0; i < Model.ItemsIds.Count(); i++)
            {
                <option value="@Model.ItemsIds[i]">@Model.ItemsNames[i]</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="type">Type</label>
        <select id="type" class="form-control" name="Type">
            <option value="0">For Here</option>
            <option value="1">To Go</option>
        </select>
    </div>
    <div class="form-group">
        <label for="quantity">Quantity</label>
        <input type="number" step="1" min="1" class="form-control" id="quantity" placeholder="Quantity..." name="quantity">
    </div>
    <div class="hidden">
        <input name="DateTime" value="@DateTime.Now">
    </div>
    <hr class="bg-secondary half-width" />
    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn ">Create</button>
    </div>
</form>