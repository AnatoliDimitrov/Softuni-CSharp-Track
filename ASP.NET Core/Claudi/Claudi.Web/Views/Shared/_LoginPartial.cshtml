@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
        var user = User.Identity?.Name?.Substring(0, User.Identity.Name.IndexOf('@'));
    <li>
        <a  asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Профил</a>
    </li>
    <li>
        <form  asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="btn text-warning">Изход</button>
        </form>
    </li>
}
else
{
    <li>
        <a asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
    </li>
    <li>
        <a asp-area="Identity" asp-page="/Account/Login">Вход</a>
    </li>
}
