@using Claudi.Infrastructure.Data.Models.DataBaseModels
@model List<ProductColor>

@{
    ViewData["Title"] = "Цветове";
}

<!--Page Title-->
<section class="page-title" style="background-image: url(/images/background/page-title.jpg);">
    <div class="auto-container">
        <div class="content-box">
            <div class="title">
                <h1>Хоризонтални щори</h1>
            </div>
            <ul class="bread-crumb clearfix">
                <li>Галерия</li>
                <li class="shape"></li>
                <li>Мостри</li>
            </ul>
        </div>
    </div>
</section>
<!--End Page Title-->
<!-- gallery-page-section -->
<section class="gallery-page-section sec-pad-2">
    <div class="auto-container">
        <div class="sortable-masonry">
            <div class="filters">
                <ul class="filter-tabs filter-btns centred clearfix">
                    @*<li class="active filter" data-role="button" data-filter=".all">Всички</li>*@
                    <li class="filter" data-role="button" data-filter=".25mm">25mm</li>
                    <li class="filter" data-role="button" data-filter=".16mm">16mm</li>
                    <li class="filter" data-role="button" data-filter=".profils">Профили</li>
                    <li class="filter" data-role="button" data-filter=".maxiProfils">Макси Профили</li>
                </ul>
            </div>
            <div class="items-container row clearfix">
                @foreach (var item in Model)
                {
                    <div class="col-lg-3 col-md-6 col-sm-12 masonry-item small-column all @item.CssClass shutters">
                        <div class="project-block-one">
                            <div class="inner-box">
                                <figure class="image-box">
                                    <img src="..@item.ImageUrl" alt="@item.Number">
                                </figure>
                                <div class="content-box">
                                    <div class="view-btn"><a href="..@item.ImageUrl" class="lightbox-image" data-fancybox="gallery">+</a></div>
                                    <div class="text">
                                        <h3>@item.Group</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- gallery-page-section end -->
