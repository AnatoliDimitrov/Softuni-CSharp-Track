@using Claudi.Core.ViewModels.CommonViewModels
@model List<TypeViewModel>

@{
    ViewData["Title"] = "Продукти";
}

<!--Page Title-->
<section class="page-title" style="background-image: url(/images/background/page-title.jpg);">
    <div class="auto-container">
        <div class="content-box">
            <div class="title">
                <h1>Продукти</h1>
            </div>
            <ul class="bread-crumb clearfix">
                <li>Щори</li>
                <li class="shape"></li>
                <li>Сенници</li>
                <li class="shape"></li>
                <li>Комарници</li>
            </ul>
        </div>
    </div>
</section>
<!--End Page Title-->
<!-- gallery-page-section -->
<section class="gallery-page-section sec-pad-2">
    <div class="auto-container">
        <div class="sortable-masonry">
            <div class="filters">
            </div>
            <div class="items-container row clearfix">
                @for (var i = 0; i < Model.Count; i++)
                {
                    <div class="col-lg-3 col-md-6 col-sm-12 masonry-item small-column all shutters curtains blinds home_drcor">
                    <div class="project-block-one">
                        <div class="inner-box">
                            <figure class="image-box">
                                <img src="~/images/gallery/gallery-@(i+8).jpg" alt="@Model[i].Name">
                            </figure>
                            <div class="content-box">
                                <div class="view-btn"><a href="/Products/@Model[i].EnglishNameShort">+</a></div> 
                                <div class="text">
                                    <h3>@Model[i].Name</h3>
                                    <ul>
                                        <li><a href="/Catalogues/@Model[i].EnglishNameShort">Цени</a></li>
                                        <li>/</li>
                                        <li><a href="/Calculators/Index">Калкулатор</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</section>
    <partial name="_FreeFeatures" />
<!-- gallery-page-section end -->
<!--Scroll to top-->
<button class="scroll-top scroll-to-target" data-target="html">
    <span class="far fa-long-arrow-alt-up"></span>
</button>  
