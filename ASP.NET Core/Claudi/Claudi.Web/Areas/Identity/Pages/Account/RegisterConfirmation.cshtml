@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Потвърждение на имейл";
}

<div class="container">
    <div class="col-md-2"></div>
    <div class="col-md-6">
        <h1>@ViewData["Title"]</h1>
        @{
            if (@Model.DisplayConfirmAccountLink)
            {
                <p>
                    This app does not currently have a real email sender registered, see <a href="https://aka.ms/aspaccountconf">these docs</a> for how to configure a real email sender.
                    Normally this would be emailed: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Click here to confirm your account</a>
                </p>
            }
            else
            {
                <p>
                    Моля проверете имейла си и потвърдете акаунта.
                </p>
                <p>
                    Имайте предвид, че имейлът за потвърждение може да се забави до няколко часа.
                </p>
                <p>
                    <a id="resend-confirmation" href="/Identity/Account/ResendEmailConfirmation">Повторно изпращане на имейл за потвърждение</a>
                </p>
            }
        }
    </div>
</div>
