@page
@model LoginModel

@{
    ViewData["Title"] = "Вход";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-3">
        <section>
            <form class="default-form" id="account" method="post">
                <h3>Влез с акаунта си</h3>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label">Имейл</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label">Парола</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            Запомни ме?
                            @*@Html.DisplayNameFor(m => m.Input.RememberMe)*@
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Вход</button>
                </div>
                <div>
                    <ul class="info clearfix pull-left">
                        <li><a id="forgot-password" asp-page="./ForgotPassword">Забравена парола</a></li>
                        <li><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Регистрация</a></li>
                        <li><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Повторно изпращане на имейл за потвърждение</a></li>
                    </ul>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
